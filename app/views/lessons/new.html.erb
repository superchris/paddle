<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Lesson Details</h1>
  <%= simple_form_for @lesson do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :time %>
    <%= f.input :location %>
    <%= f.input :address %>
    <%= f.input :max_students %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
